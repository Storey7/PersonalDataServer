extends layout

block content

  h1 Delete Location: #{location.location}
  
  if location_events.length
  
    p #[strong Delete the following events before attempting to delete this location.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Location
    
      dl
      each event in location_events
        dt 
          #{event}

  else
    p Do you really want to delete this Location?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=location._id )

      button.btn.btn-primary(type='submit') Delete