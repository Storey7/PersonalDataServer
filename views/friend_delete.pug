extends layout

block content

  h1 #{title}: #{friend.name}
  
  
  if friend_events.length
  
    p #[strong Delete the following books before attempting to delete this author.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Events
    
      dl
      each event in friend_events
        #{event}

  else
    p Do you really want to delete this Friend?
    
    form(method='POST' action='')
      div.form-group
        input#friendid.form-control(type='hidden',name='friendid', required='true', value=friend._id )

      button.btn.btn-primary(type='submit') Delete