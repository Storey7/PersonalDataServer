extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='date') Date:
      input#date.form-control(type='date', name='date' value=(undefined=== rubiks ? '' : rubiks.date) )
    div.form-group
      label(for='time') Time:
      input#rubiks.form-control(type='number', name='time', step = ".01", value=(undefined===rubiks ? '' : rubiks.time) )
    div.form-group
      label(for='toy') Toy:
      input#name.form-control(type='text', placeholder="3x3" name='toy' required='true' value=(undefined===rubiks? '' : rubiks.toy) )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg